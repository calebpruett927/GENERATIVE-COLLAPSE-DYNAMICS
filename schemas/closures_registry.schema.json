{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/closures_registry.schema.json",
  "title": "UMCP Casepack Closures Registry",
  "description": "Schema for casepack-level closure registries. Declares the closures used by a specific casepack, including base closures (gamma, DC_form, R_estimator, curvature_neighborhood), domain-specific closures, weld budget configuration, and validation rules.",
  "type": "object",
  "required": ["schema"],
  "additionalProperties": false,
  "properties": {
    "schema": {
      "description": "Schema self-reference.",
      "type": "string",
      "const": "schemas/closures_registry.schema.json"
    },
    "registry": { "$ref": "#/$defs/registry" }
  },
  "$defs": {
    "registry": {
      "type": "object",
      "required": ["id", "closures"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 3
        },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "contract": { "type": "string" },
        "closures": {
          "type": "object",
          "required": ["gamma"],
          "additionalProperties": {
            "$ref": "#/$defs/closureEntry"
          }
        },
        "base_closures": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/closureRef"
          }
        },
        "weld_budget": { "$ref": "#/$defs/weldBudget" },
        "validation": {
          "type": "object",
          "additionalProperties": true
        },
        "notes": { "type": "string" },
        "extensions": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "patternProperties": {
        "^.*_closures$": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/domainClosureEntry"
          }
        }
      }
    },
    "closureEntry": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "formula": { "type": "string" },
        "method": { "type": "string" },
        "path": { "type": "string" },
        "parameters": {
          "type": "object",
          "additionalProperties": true
        },
        "notes": { "type": "string" },
        "radius": { "type": "string" }
      }
    },
    "closureRef": {
      "type": "object",
      "required": ["path"],
      "additionalProperties": true,
      "properties": {
        "path": { "type": "string", "minLength": 1 }
      }
    },
    "domainClosureEntry": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string" },
        "path": { "type": "string" },
        "function": { "type": "string" },
        "functions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "description": { "type": "string" },
        "inputs": { "type": "array" },
        "outputs": { "type": "array" },
        "frozen_params": {
          "type": "object",
          "additionalProperties": true
        },
        "tie_breakers": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "weldBudget": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": { "type": "boolean" },
        "formula": { "type": "string" },
        "note": { "type": "string" },
        "components": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
