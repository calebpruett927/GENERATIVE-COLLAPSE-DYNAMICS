{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/closures_registry.schema.json",
  "title": "UMCP Closures Registry",
  "description": "Schema for the UMCP closure registry file",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "registry_id": {
      "type": "string",
      "description": "Unique identifier for this registry"
    },
    "version": {
      "type": "string",
      "description": "Registry version"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "entries": {
      "type": "array",
      "description": "List of closure definitions (preferred key)",
      "items": {
        "type": "object",
        "required": ["closure_id", "version"],
        "additionalProperties": true,
        "properties": {
          "closure_id": { "type": "string" },
          "version": { "type": "string" },
          "description": { "type": "string" },
          "file": { "type": "string" },
          "contract_ref": { "type": "string" },
          "inputs": {
            "type": "array",
            "items": { "type": "object", "additionalProperties": true }
          },
          "outputs": {
            "type": "array",
            "items": { "type": "object", "additionalProperties": true }
          }
        }
      }
    },
    "closures": {
      "type": "array",
      "description": "List of closure definitions (legacy alias)",
      "items": {
        "type": "object",
        "required": ["closure_id", "version"],
        "additionalProperties": true,
        "properties": {
          "closure_id": { "type": "string" },
          "version": { "type": "string" },
          "description": { "type": "string" },
          "file": { "type": "string" },
          "contract_ref": { "type": "string" },
          "inputs": {
            "type": "array",
            "items": { "type": "object", "additionalProperties": true }
          },
          "outputs": {
            "type": "array",
            "items": { "type": "object", "additionalProperties": true }
          }
        }
      }
    }
  },
  "anyOf": [
    { "required": ["entries"] },
    { "required": ["closures"] }
  ]
}
