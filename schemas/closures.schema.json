{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/closures.schema.json",
  "title": "UMCP Closures and Registry Schema",
  "description": "Schema for UMCP closure documents and registries. Supports two branches: (1) registry — declares which closures a run uses, (2) closure — defines a single closure. Domain-extension closures (e.g. finance_embedding) are supported via flexible kind values.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "schemas/closures.schema.json"
    },
    "registry": { "$ref": "#/$defs/registry" },
    "closure": { "$ref": "#/$defs/closureDoc" },
    "notes": { "type": "string" },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "oneOf": [
    { "required": ["registry"] },
    { "required": ["closure"] }
  ],
  "$defs": {
    "relPath": {
      "type": "string",
      "minLength": 1
    },
    "registry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "closures"],
      "properties": {
        "id": { "type": "string", "minLength": 3 },
        "closures": {
          "type": "object",
          "additionalProperties": false,
          "required": ["gamma", "return_domain", "norms"],
          "properties": {
            "gamma": { "$ref": "#/$defs/registryRef" },
            "return_domain": { "$ref": "#/$defs/registryRef" },
            "norms": { "$ref": "#/$defs/registryRef" },
            "curvature_neighborhood": { "$ref": "#/$defs/registryRef" }
          }
        },
        "notes": { "type": "string" },
        "extensions": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "registryRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path"],
      "properties": {
        "path": { "$ref": "#/$defs/relPath" }
      }
    },
    "closureKind": {
      "description": "Closure kind identifier. Base kinds (gamma, return_domain, norms, curvature_neighborhood) have strict schemas. Domain-extension kinds are validated with flexible structure.",
      "type": "string",
      "minLength": 1
    },
    "closureDoc": {
      "type": "object",
      "required": ["kind", "id"],
      "properties": {
        "kind": { "$ref": "#/$defs/closureKind" },
        "id": { "type": "string", "minLength": 3 },
        "gamma": { "$ref": "#/$defs/gammaClosure" },
        "return_domain": { "$ref": "#/$defs/returnDomainClosure" },
        "norms": { "$ref": "#/$defs/normsClosure" },
        "curvature_neighborhood": { "$ref": "#/$defs/curvatureNeighborhoodClosure" },
        "notes": { "type": "string" },
        "extensions": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": {
        "description": "Domain-extension closure content. Property name should match the closure kind.",
        "type": "object",
        "additionalProperties": true
      },
      "allOf": [
        {
          "if": { "properties": { "kind": { "const": "gamma" } }, "required": ["kind"] },
          "then": { "required": ["gamma"] }
        },
        {
          "if": { "properties": { "kind": { "const": "return_domain" } }, "required": ["kind"] },
          "then": { "required": ["return_domain"] }
        },
        {
          "if": { "properties": { "kind": { "const": "norms" } }, "required": ["kind"] },
          "then": { "required": ["norms"] }
        },
        {
          "if": { "properties": { "kind": { "const": "curvature_neighborhood" } }, "required": ["kind"] },
          "then": { "required": ["curvature_neighborhood"] }
        }
      ]
    },
    "gammaClosure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["form", "parameters"],
      "properties": {
        "form": {
          "type": "string",
          "enum": ["omega_power", "neglog_one_minus_omega", "custom"]
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "returnDomainClosure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "parameters"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["window", "cycle", "custom"]
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true
        },
        "description": { "type": "string" }
      }
    },
    "normsClosure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["norm", "eta"],
      "properties": {
        "norm": {
          "type": "string",
          "enum": ["L1", "L2", "Linf", "custom"]
        },
        "eta": { "type": "number", "exclusiveMinimum": 0 }
      }
    },
    "curvatureNeighborhoodClosure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "parameters"],
      "properties": {
        "type": { "type": "string", "enum": ["default", "custom"] },
        "parameters": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
