{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/receipt.ss1m.schema.json",
  "title": "UMCP SS1m Receipt Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "receipt"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "schemas/receipt.ss1m.schema.json"
    },
    "receipt": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "version", "created_utc", "casepack", "canon", "contract", "closures", "kernel"],
      "properties": {
        "kind": { "type": "string", "const": "ss1m" },
        "version": { "type": "integer", "minimum": 1 },
        "created_utc": { "type": "string", "format": "date-time" },

        "casepack": {
          "type": "object",
          "additionalProperties": false,
          "required": ["id"],
          "properties": {
            "id": { "type": "string", "minLength": 2 },
            "manifest_path": { "type": "string" }
          }
        },

        "canon": {
          "type": "object",
          "additionalProperties": false,
          "required": ["pre_doi", "post_doi", "weld_id"],
          "properties": {
            "pre_doi": { "$ref": "#/$defs/doiString" },
            "post_doi": { "$ref": "#/$defs/doiString" },
            "weld_id": { "type": "string", "minLength": 3 }
          }
        },

        "contract": {
          "type": "object",
          "additionalProperties": false,
          "required": ["id", "path"],
          "properties": {
            "id": { "type": "string", "minLength": 3 },
            "path": { "type": "string", "minLength": 1 }
          }
        },

        "closures": {
          "type": "object",
          "additionalProperties": false,
          "required": ["registry_id", "registry_path"],
          "properties": {
            "registry_id": { "type": "string", "minLength": 3 },
            "registry_path": { "type": "string", "minLength": 1 }
          }
        },

        "row": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "t": { "type": "integer", "minimum": 0 },
            "row_id": { "type": "string" }
          }
        },

        "kernel": {
          "type": "object",
          "additionalProperties": false,
          "required": ["omega", "F", "S", "C", "tau_R", "kappa", "IC"],
          "properties": {
            "omega": { "type": "number" },
            "F": { "type": "number" },
            "S": { "type": "number" },
            "C": { "type": "number" },

            "tau_R": {
              "description": "Return delay Ï„_R. Either a nonnegative number or a typed special value.",
              "oneOf": [
                { "type": "number", "minimum": 0 },
                { "type": "string", "enum": ["INF_REC", "UNIDENTIFIABLE"] }
              ]
            },

            "kappa": { "type": "number" },
            "IC": { "type": "number" },

            "IC_min": {
              "description": "Optional min(IC) overlay for Critical regime determination.",
              "type": "number"
            }
          }
        },

        "regime": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "label": { "type": "string", "enum": ["Stable", "Watch", "Collapse"] },
            "critical_overlay": { "type": "boolean" }
          }
        },

        "tolerances": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "epsilon": { "type": "number", "exclusiveMinimum": 0 },
            "tol_seam": { "type": "number", "minimum": 0 },
            "tol_id": { "type": "number", "minimum": 0 }
          }
        },

        "checksums": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "manifest_sha256": { "$ref": "#/$defs/sha256" }
          }
        },

        "seam": {
          "description": "Optional seam audit fields if this receipt is attached to a continuity claim.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "delta_kappa_ledger": { "type": "number" },
            "ir": { "type": "number" },
            "s": { "type": "number" },
            "tol_seam": { "type": "number" },
            "tol_id": { "type": "number" },
            "pass": { "type": "boolean" }
          }
        },

        "notes": { "type": "string" }
      }
    },
    "notes": { "type": "string" },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "$defs": {
    "doiString": {
      "type": "string",
      "minLength": 6,
      "pattern": "^10\\.[0-9]{4,9}/.+$"
    },
    "sha256": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{64}$"
    }
  }
}
